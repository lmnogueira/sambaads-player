<!DOCTYPE html>
<html lang="pt">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>Página de Vídeos</title>

  <link rel="stylesheet" type="text/css" href="/stylesheets/sambaads.base.css">

  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600italic,600,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
  <div class="container">
    <div id="header_video_principal" class="row">
      <div class="col-xs-4"></div>
      <div id="logo" class="col-xs-4">
        <img class="img-responsive" src="/images/logo.png" alt="logo samba" />
      </div>
      <!-- LOGO -->
      <div class="col-xs-4"></div>
    </div>
    <!-- HEADER ROW-->
    <div id="video_container" class="row">
      <div id="video_principal" class="row col-xs-12">
        <script src='/javascripts/player.js?m=<%= media %>&p=<%= publisher %>&sk=blue&tm=light&tb=&tbbg=&debug=true'></script>
      </div>
      <!-- THUMB VIDEO PRINCIPAL -->
      <div id="nome_produtor" class="row col-xs-12">
        <%= media_info.owner_name %>
      </div>
      <!-- NOME PRODUTOR -->
      <div id="titulo_video_principal" class="row col-xs-12">
        <%= media_info.title %>
      </div>
      <!-- TITULO VIDEO PRINCIPAL -->
      <div id="descricao_video_principal" class="row col-xs-12">
        <%= media_info.description %>
      </div>
      <!-- TITULO VIDEO PRINCIPAL -->
      <div id="titulo_tags" class="col-xs-6">
        TAGS -
        <span class="tags">
          <%= media_info.tag_list %>
        </span>
      </div>
      <!-- NOME PRODUTOR -->
      <!-- <div id="titulo_compartilhar" class="col-xs-6">
        COMPARTILHAR -
        <span class="social_thumbs">
          <a href="#"><img src="/images/facebook.png" /></a>
          <a href="#"><img src="/images/twitter.png" /></a>
          <a href="#"><img src="/images/pinterest.png" /></a>
          <a href="#"><img src="/images/whatsapp.png" /></a>
        </span>
      </div> -->
      <!-- NOME PRODUTOR -->
    </div>
    <!-- VIDEO CONTAINER -->
    <div id="divisor" class="row col-xs-12">
      <img class="img-responsive" src="/images/divisor.png" alt="3 cores divisor" />
    </div>
    <!-- DIVISOR ROW-->
    <div id="assista_tambem" class="row col-xs-12">
      Assista também
    </div>
    <div id="sambaads-content"></div>
  </div>
  <!-- CONTAINER -->
  <div id="footer" class="container-fluid">
    <div id="footer_content" class="row col-xs-12">
      Copyright © 2012-2015 SambaAds. Todos os direitos reservados.
      <br />
      <a class="footer_links" href="http://www.sambaads.com.br" target="_blank">www.sambaads.com.br</a> -
      <a class="footer_links" href="http://www.facebook.com/SambaAds" target="_blank">fb.com/SambaAds</a> -
      <a class="footer_links" href="http://www.twitter.com/sambaads" target="_blank">twitter.com/sambaads</a>
    </div>
    <!-- FOOTER CONTENT -->
  </div>
  <!-- FOOTER -->

  <script src="/javascripts/sambaads.base.js"></script>

  <script>
  $(document).ready(function() {
    var sambaads = new SambaadsLayout(<%- JSON.stringify(info) %>);
    sambaads.create();

    $("#titulo_assista_tambem1, #titulo_assista_tambem2, #titulo_assista_tambem3, #titulo_assista_tambem4, #titulo_assista_tambem5, #titulo_assista_tambem6").dotdotdot({
      watch: 'false'
    });

    $(".iframe").colorbox({
      iframe: true,
      width: 640,
      height: 620,
      scrolling: false
    });
    //Example of preserving a JavaScript event for inline calls.
  });
  </script>

</body>

</html>